<body>
  <div class="wrap">
    <div class="card">
      <div class="body">
        <h1>Halloween Movie Title Generator ðŸŽƒ</h1>
        <p>Enter your <b>date of birth</b>. Weâ€™ll use your <i>day</i>, <i>month</i>, and the <i>last digit of your year</i> to conjure a spooky title.</p>

        <div class="row">
          <label>
            <span class="label">Date of Birth</span>
            <input id="dob" type="date" />
          </label>
          <button id="randomize">Randomize</button>
          <button id="copy" class="primary" disabled>Copy Title</button>
        </div>

        <div class="panel">
          <div style="color:#ffb469;font-size:12px;font-weight:700;margin-bottom:6px">Your Movie Title</div>
          <h2 id="title" style="margin:0;font-size:28px;font-weight:900;min-height:36px">Pick a date to summon your titleâ€¦</h2>
        </div>

        <div class="hint footer">
          Tip: Copy your title and paste it as a reply in the Slack thread!
        </div>
      </div>
    </div>
  </div>

  <script>
    // Dictionaries
    const dayWords = {1:"Curse",2:"Blood",3:"Night",4:"Ghost",5:"Witch",6:"Children",7:"House",8:"Legend",9:"Haunting",10:"Return",11:"Tomb",12:"Killer",13:"Nightmare",14:"Terror",15:"Invasion",16:"Evil",17:"Revenge",18:"Shadows",19:"Demon",20:"Secret",21:"Bride",22:"Dawn",23:"Dead",24:"Mask",25:"Creeps",26:"Midnight",27:"Corpse",28:"Grave",29:"Phantom",30:"Zombie",31:"Cannibal"};
    const monthTwist = {1:"of the",2:"in the",3:"from the",4:"beneath the",5:"beyond the",6:"against the",7:"at the",8:"versus the",9:"within the",10:"above the",11:"haunted by the",12:"rise of the"};
    const yearThing = {0:"Crypt",1:"Swamp",2:"Vampire",3:"Pumpkin Patch",4:"Morgue",5:"Demon",6:"Graveyard",7:"Werewolf",8:"Witch",9:"Zombie"};

    const elDob = document.getElementById("dob");
    const elTitle = document.getElementById("title");
    const elCopy = document.getElementById("copy");
    const elRandomize = document.getElementById("randomize");

    function titleFromISO(iso){
      if(!iso) return "";
      const [y,m,d] = iso.split("-").map(Number);
      if(!y||!m||!d) return "";
      return `${dayWords[d]} ${monthTwist[m]} ${yearThing[y % 10]}`;
    }

    function update(){
      const iso = elDob.value;
      const t = titleFromISO(iso);
      elTitle.textContent = t || "Pick a date to summon your titleâ€¦";
      elCopy.disabled = !t;
    }

    elDob.addEventListener("change", update);

    elCopy.addEventListener("click", async () => {
      const t = elTitle.textContent.trim();
      if(!t || t === "Pick a date to summon your titleâ€¦") return;
      try {
        await navigator.clipboard.writeText(`ðŸŽ¬ ${t}`);
        const old = elCopy.textContent;
        elCopy.textContent = "Copied!";
        setTimeout(()=> (elCopy.textContent = old), 1200);
      } catch(e) { alert("Copy failed. Please copy manually."); }
    });

    elRandomize.addEventListener("click", () => {
      const day = Math.floor(Math.random()*31)+1;
      const month = Math.floor(Math.random()*12)+1;
      const year = 1970 + Math.floor(Math.random()*45); // 1970â€“2014
      elDob.value = `${year}-${String(month).padStart(2,"0")}-${String(day).padStart(2,"0")}`;
      update();
    });
  </script>
